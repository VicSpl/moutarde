<div class="tab-pane fade show presentation" id="interface" role="tabpanel" aria-labelledby="interface-tab">
	<div class="sub-menu">
		<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">

			<li class="nav-item" role="presentation">
				<a class="nav-link active sing-in" id="pills-connection-tab" data-bs-toggle="pill" href="#pills-connection" role="tab" aria-controls="pills-connection" aria-selected="true">Connectez-vous</a>
			</li>
			<li class="nav-item" role="presentation">
				<a class="nav-link sing-up" id="pills-registration-tab" data-bs-toggle="pill" href="#pills-registration" role="tab" aria-controls="pills-registration" aria-selected="false">S'inscrire</a>
			</li>
		</ul>
	</div>

	<div class="tab-content" id="pills-tabContent">
		<div class="tab-pane fade show active" id="pills-connection" role="tabpanel" aria-labelledby="pills-connection-tab">

			<form class="form-site" action="" method="post">

				{% if error is defined %}
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
				{% endif %}

				<label for="identifying">Identifiant</label>
				<input class="form-control" value="{{ 'last-username' }}" type="text" name="identifying" id="identifying" placeholder="dufour06" required autofocus>
				<label for="password">Mot de passe</label>
				<input class="form-control" type="password" name="password" id="password" placeholder="********" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button type="submit" class="form-control btn-color ">Envoyer</button>


				{# {% if app.user %}
					<div class="mb-3">
						You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
					</div>
					{% endif %} #}

				{# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
				<label for="inputUuid">Uuid</label>
				<input type="text" name="uuid" id="inputUuid" class="form-control">
				<label for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control">#}
			</form>
		</div>

		<div class="tab-pane fade show" id="pills-registration" role="tabpanel" aria-labelledby="pills-registration-tab">

			<form class="form-site" action="" method="post">
				<label for="lastname">Nom</label>
				<input class="form-control" name="lastname" id="lastname" placeholder="Dufour">
				<label for="firstname">Pr√©nom</label>
				<input class="form-control" name="firstname" id="firstname" placeholder="Jean">
				<label for="identifying">Identifiant</label>
				<input class="form-control" name="identifying" id="identifying" placeholder="JeanD">
				<label for="address">Adresse</label>
				<input class="form-control" name="address" id="address" placeholder="5 rue de la bonne" required>

				<div class="d-flex justify-content-between">
					<label for="address">Code</label>
					<label for="address">Ville</label>

				</div>
				<div class="d-flex">
					<input class="form-control" name="zip-code" id="zip-code" id="zip-code" placeholder="91000"  required/>
					<input class="form-control" type="texte" name="city" id="city" placeholder="Evry"  required/>
				</div>
				<label for="number">Number</label>
				<input class="form-control" name="number" id="number" placeholder="0625xxxxxx">
				<label for="email">Email</label>
				<input class="form-control" type="email" name="email" id="email" placeholder="dufour@mandarine.fr">
				<label for="password">Mot de passe</label>
				<input class="form-control" type="password" name="password" id="password" placeholder="********">
				<label for="password-confirm">Confirmez votre Mot de passe</label>
				<input class="form-control" type="password" name="password-confirm" id="password-confirm" placeholder="********">
				<button type="submit" class="form-control btn-color ">Envoyer</button>
			</form>

		</div>
	</div>

</div>
